<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="reporteactaenpdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size: 18px">
<!--                    titulo-->
                    <div class="row">
                        <div class="col-md-12" align="center" style="font-size: 12px">
                            <h1>ACTA DIGITAL DE PRESTACIÓN DE SERVICIOS</h1>
                        </div>
                    </div>
<!--                    fin titulo-->
                    <div class="row">
                        <div class="col-md-12 mt-3">
                            <p>Se realizaron las actividades de un
                                <t t-if="o.area_pt=='pt2'">
                                    mantenimiento
                                </t>
                                <t t-if="o.area_pt=='pt1'">
                                    proyecto
                                </t>,
                                acargo de <t t-esc="o.tecnico_acta"/>
                            </p>
                        </div>
                        <t t-if="o.area_pt=='pt2'">
                            <div>
                                <table style="width:100%; border: 1px solid black;" >
                                  <tr>
                                    <th style="border: 1px solid black;">Tipo de unidad</th>
                                    <th style="border: 1px solid black;">Codigo unidad</th>
                                    <th style="border: 1px solid black;">Nombre de la unidad</th>
                                    <th style="border: 1px solid black;">Hora/fecha inicio </th>
                                    <th style="border: 1px solid black;">Hora/fecha fin</th>
                                  </tr>
                                  <tr>
                                    <td style="border: 1px solid black;"><t t-esc="o.codigo_acta_tipo"/></td>
                                    <td style="border: 1px solid black;"><t t-esc="o.codigo_acta"/></td>
                                    <td style="border: 1px solid black;"><t t-esc="o.codigo_acta_nombre"/></td>
                                    <td style="border: 1px solid black;"><t t-esc="o.hora_inicio_acta"/></td>
                                    <td style="border: 1px solid black;"><t t-esc="o.hora_final_acta"/></td>
                                  </tr>
                                </table>
                            </div>
                            <div class="row">
                            <div class="col-md-12" >
                                    <h2>Falla reportada</h2>
                                </div>
                            </div>
                            <t t-esc="o.falla_reportada_acta"/>
                            <t t-if="o.Servicio_inmediato=='Si'">
                                <t t-if="o.Tipo_mantenimiento=='t1'">
                                    <h2>Elementos utilizados o suminisrados</h2>
                                    <table style="width:100%; border: 1px solid black; margin-top: 25px;">
                                        <tr>
                                            <th style="border: 1px solid black;">Nombre</th>
                                            <th style="border: 1px solid black;">Categoria</th>
                                            <th style="border: 1px solid black;">Placa montada</th>
                                            <th style="border: 1px solid black;">Placa desmontada </th>
                                        </tr>
                                        <tr t-foreach="o.campos" t-as="l">
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.nombre"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.categoria"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.placa"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.segunda_placa"/>
                                           </th>
                                        </tr>
                                        <tr t-foreach="o.campos3" t-as="l">
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.nombre"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <p>N/A</p>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.placa"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.segunda_placa"/>
                                           </th>
                                        </tr>
                                         <tr t-foreach="o.campos4" t-as="l">
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.nombre"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <p>N/A</p>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.placa"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.segunda_placa"/>
                                           </th>
                                        </tr>
                                         <tr t-foreach="o.campos2" t-as="l">
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.lista_cliente"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <span t-field="l.propiedad_material"/>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <p>N/A</p>
                                           </th>
                                           <th style="border: 1px solid black;">
                                               <p>N/A</p>
                                           </th>
                                        </tr>
                                    </table>
                                </t>
                            </t>
                            <h2 style="margin-top: 25px;">Observaciones técnico</h2>
                            <t style="margin-top: 25px;" t-esc="o.observaciones_generales"/>
                            <div class="row">
                                <div class="col-md-12" align="center" >
                                    <table style="border: 1px solid black; margin-top: 25px;">
                                        <tr style="border: 1px solid black;">
                                            <td style="border: 1px solid black;">Calificación final de la encuesta</td>
                                            <td style="border: 1px solid black;"> <t t-esc="o.sumencuesta"/> </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </div>
                    <div class="row">
                        <div class="col-md-12" align="center" >
                            <table style=" margin-top: 25px;">
                                <tr>
                                    <td> <t t-esc="o.Firma" t-options="{'widget':'image'}"/> </td>
                                </tr>
                                <tr>
                                    <td align="center"> <t  t-esc="o.quienfirma"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
